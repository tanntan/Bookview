<%= simple_form_for @book do |f| %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category")%><br>
  <label>Image of Book</label><br>
  <%= f.file_field :book_img%>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>